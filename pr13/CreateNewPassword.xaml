<Window x:Class="pr13.CreateNewPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr13"
        mc:Ignorable="d"
        Title="Переназначение пароля" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Style="{StaticResource LabelAligments}" 
               Content="Введите новый пароль"
               FontSize="30"/>

        <TextBox Grid.Row="1"
                 x:Name="tbPassword"
                 Style="{StaticResource CenteredTextBox}"
                 Height="100"
                 Width="300"
                 FontSize="30"/>

        <Button Grid.Row="2"
                Style="{StaticResource WhiteCenteredButton}"
                Height="100"
                Width="300"
                Content="Сохранить пароль"
                FontSize="30"
                Click="btnSave_Click"/>

    </Grid>
</Window>
